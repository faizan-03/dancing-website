extends base.pug

block scripts
  script(src='..//static/index.js')
 
block style 
  style 
    include ../static/style.css
    include ../static/stylecon.css

block content
    div.con 
        h1 Contact Us 
            form(action="/contact", method="post" class="myform")
                input(type="text" class="myinput"   name="name" placeholder="Enter the name")  
                input(type="phone" class="myinput"  name="phone"  placeholder="Enter the phone number")  
                input(type="email" class="myinput"  name="email"  placeholder="Enter the email")  
                input(type="text" class="myinput"   name="address" placeholder="Enter the adddress")  
                input(type="text" class="myinput"   name="desc" placeholder="Enter the description")
                button(class="btn")
                    | Submit    